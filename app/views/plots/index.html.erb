<h1>Plots</h1>
<br>
<% @plots.each do |plot| %>
  <div id="plot-<%= plot.id %>">
    <p><%= plot.number %></p>
      <% plot.plants.each do |plant| %>
        <p><%= plant.name %></p>
        <p><%= link_to "Remove #{plant.name}", plot_plant_path(plot.id, plant.id), method: :delete, local: true %>
      <% end %>
  </div>
<% end %>